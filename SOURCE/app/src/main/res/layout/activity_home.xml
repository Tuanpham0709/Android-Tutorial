<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/fixed_bar"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#082A83"
        android:layout_centerHorizontal="true"
        android:weightSum="5"
        >
        <LinearLayout

            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_card_couble"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tích điểm"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_gift_box"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quà tặng"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_notication"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_profile"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>



<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_above="@+id/fixed_bar"
    android:background="#fffccc">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào, "
                android:textColor="#0A0000"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:text="Nguyen van A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F70707"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:text="(+8577377267)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0A0000"
                />


        </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_marginTop="15dp"
                android:background="@drawable/radius_list_choose"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:divider="#D81414"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:cardElevation="20dp"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="15dp"
                android:outlineSpotShadowColor="#D81111"
                android:outlineAmbientShadowColor="#D61717"
                >
        <LinearLayout

            android:paddingVertical="10dp"
            android:paddingHorizontal="25dp"
            android:background="@drawable/radius_list_choose"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"

                >

                <TextView
                    android:textColor="#110101"
                    android:textSize="22sp"
                    android:layout_weight="2.6"
                    android:text="Điểm tích lũy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    />

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:text="3000"
                    android:textColor="#FF0505"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_coint"
                    android:layout_weight="0.2"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />

            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="#CECBCB"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_tichdiem"/>
                <TextView
                    android:textColor="#0E0D0D"
                    android:text="Tích điểm"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_dungdiem"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dùng điểm"
                        android:textSize="13sp"
                        android:textColor="#0E0D0D" />

                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_tienich"/>

                    <TextView
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiện ích"
                        android:textColor="#0E0D0D" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_giohang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đặt hàng"
                        android:textColor="#0E0D0D"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_hoidap"/>
                    <TextView
                        android:textColor="#0E0D0D"
                        android:text="Hỏi đáp"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_baogia"/>

                    <TextView
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Báo giá"
                        android:textColor="#0E0D0D" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

            </android.support.v7.widget.CardView>


           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="match_parent">
               <TextView
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="25dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Tin tức"
                   android:textSize="22dp"
                   android:textStyle="bold"
                   android:textColor="#000000"

                   />
               <android.support.v7.widget.RecyclerView
                   android:id="@+id/rc_view_news"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </android.support.v7.widget.RecyclerView>


               <TextView
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="25dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Khuyến mãi "
                   android:textSize="22dp"
                   android:textStyle="bold"
                   android:textColor="#000000"
                   />
               <android.support.v7.widget.RecyclerView
                   android:id="@+id/rc_view_promotion"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </android.support.v7.widget.RecyclerView>

           </LinearLayout>



       </LinearLayout>


</ScrollView>
</RelativeLayout>