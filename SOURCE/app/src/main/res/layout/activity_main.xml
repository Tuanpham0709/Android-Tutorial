<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fffccc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="3"
    >
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="0.3"
        >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_arrow_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Tài khoản"
            android:textColor="#302E2E"
            android:textSize="20sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.5"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:scaleType="centerCrop"
            android:id="@+id/profile_image"
            android:src="@mipmap/ic_launcher"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Ý Nhi"
                android:textSize="19dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/edit_profile"
                android:paddingHorizontal="17dp"
                android:paddingVertical="5dp"
                android:text="Sửa thông tin"
                android:textSize="17sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="0"
        android:padding="10dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/list_choose_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <LinearLayout

            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_weight="0.1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_history"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_weight="2.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch sử giao dịch"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="#292828"

                />

            <ImageView
                android:layout_weight="0.1"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_right_in_list_choose" />
        </LinearLayout>
        <View
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E4E4"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="3dp"
            ></View>
        <LinearLayout

            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_weight="0.1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_question"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_weight="2.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hỏi đáp"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="#292828"

                />

            <ImageView
                android:layout_weight="0.1"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_right_in_list_choose" />
        </LinearLayout>
        <View
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E4E4"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="3dp"
            ></View>
        <LinearLayout

            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_weight="0.1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_help"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_weight="2.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hướng dẫn sử dụng"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="#292828"

                />

            <ImageView
                android:layout_weight="0.1"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_right_in_list_choose" />
        </LinearLayout>
        <View
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E4E4"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="3dp"
            ></View>
        <LinearLayout

            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_weight="0.1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_logout"
                />
            <TextView
                android:id="@+id/tv_logout"
                android:layout_marginLeft="10dp"
                android:layout_weight="2.8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="#292828"

                />

            <ImageView
                android:layout_weight="0.1"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_right_in_list_choose" />
        </LinearLayout>



    </LinearLayout>
    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:padding="10dp"
        >

        <View
            android:layout_width="167dp"
            android:layout_height="7dp"
            android:background="#FC5401"
            android:layout_centerVertical="true"
            ></View>

        <View
            android:layout_width="167dp"
            android:layout_height="7dp"
            android:background="#6DFC4500"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            ></View>

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/check1"
            android:padding="5dp"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_check_white"
            android:background="@drawable/shape_circle"

            />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/check2"
            android:padding="5dp"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_check_white"
            android:background="@drawable/shape_circle_colorblue"
            android:layout_toRightOf="@+id/check1"
            android:layout_marginLeft="75dp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/check3"
            android:padding="5dp"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_lock"
            android:background="@drawable/shape_circle_color_oragne"
            android:layout_toRightOf="@+id/check2"
            android:layout_marginLeft="75dp"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/check4"
            android:padding="5dp"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_lock"
            android:background="@drawable/shape_circle_color_bk"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="76dp"
            />
    </RelativeLayout>
   <LinearLayout
       android:layout_weight="1"
       android:layout_gravity="center"
       android:orientation="vertical"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Thành viên"
           android:layout_gravity="center"
           android:textColor="#4CAF50"
           android:textStyle="bold"
           android:textSize="25dp"
           android:layout_marginBottom="10dp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAlignment="center"
           android:layout_gravity="center"
           android:text="Chào mừng bạn đã là thành viên của Deckko tích điểm để \n lên hạng cao hơn "
           />

   </LinearLayout>

    <LinearLayout

        android:layout_weight="0.8"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#082A83"
        android:layout_centerHorizontal="true"
        android:weightSum="5"
        >
        <LinearLayout
            android:id="@+id/btn_home"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation= "vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_card_couble" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tích điểm"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_gift_box"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quà tặng"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_notication"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_profile"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                />
        </LinearLayout>
        
    </LinearLayout>
    </LinearLayout>



